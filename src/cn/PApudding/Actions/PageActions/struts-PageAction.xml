<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="PageActions" namespace="/" extends="struts-default">
    	<!-- *************************************************页面创建************************************************* -->
    	
    	<!-- 创建页面请求的action映射 -->
        <action name="enterCreatePage" class="cn.PApudding.Actions.PageActions.EnterCreatePageAction">
            <result name="success">/jsps/LayoutManageJsps/PageManageJsps/CreatePage.jsp</result>
        </action>
        <!-- 绑定数据源请求的action映射 -->
        <action name="enterCreatePageBindDataSource" class="cn.PApudding.Actions.PageActions.EnterCreatePageBindDataSourceAction">
        	<result name="success">/jsps/LayoutManageJsps/PageManageJsps/CreatePageBindDataSource.jsp</result>
        </action>
        <!-- 页面保存请求的action映射 -->
        <action name="savePage" class="cn.PApudding.Actions.PageActions.SavePageAction">
        	<result name="success">/jsps/LayoutManageJsps/LayoutManageEntrance.jsp</result>
        </action>
        
        <!-- *************************************************页面删除************************************************* -->
        
        <!-- 进入删除页面请求的action映射 -->
        <action name="enterDeletePage" class="cn.PApudding.Actions.PageActions.EnterDeletePageAction">
        	<result name="success">/jsps/LayoutManageJsps/PageManageJsps/DeletePage.jsp</result>
        </action>
        <!-- 删除页面请求的action映射 -->
        <action name="deletePage" class="cn.PApudding.Actions.PageActions.DeletePageAction">
        	<result name="success">/jsps/LayoutManageJsps/LayoutManageEntrance.jsp</result>
        </action>
               
        <!-- *************************************************站点************************************************* -->
        
        <!-- 进入站点展示请求的action映射 -->
        <action name="enterSiteShow" class="cn.PApudding.Actions.PageActions.EnterSiteShowAction">
        	<result name="success">/jsps/LayoutManageJsps/SiteManageJsps/SiteShow.jsp</result>
        </action>
        <!-- 进入站点删除请求的action映射 -->
        <action name="enterSiteDelete" class="cn.PApudding.Actions.PageActions.EnterSiteDeleteAction">
        	<result name="success">/jsps/LayoutManageJsps/SiteManageJsps/SiteDelete.jsp</result>
        </action>
        <!-- 保存站点请求的action映射 -->
        <action name="saveSite" class="cn.PApudding.Actions.PageActions.SaveSiteAction">
        	<result name="success">/jsps/LayoutManageJsps/LayoutManageEntrance.jsp</result>
        </action>
        
        
    </package>
</struts>
